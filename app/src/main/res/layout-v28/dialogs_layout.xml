<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    tools:ignore="HardCodedText" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:fontFamily="casual"
            android:text="Dialog Fragments, level 1"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/defaultButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Dialog Fragment (default)" />

        <Button
            android:id="@+id/withSingleChoiceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dialog Fragment (single choice)" />

        <Button
            android:id="@+id/singleChoiceWithConfirmationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dialog Fragment (single choice with confirmation)" />

        <Button
            android:id="@+id/withMultipleChoiceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dialog Fragment (multiple choice)" />

        <Button
            android:id="@+id/multipleChoiceWhitConfirmationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dialog Fragment (multiple choice with confirmation)" />


        <TextView
            android:id="@+id/currentVolumeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56sp"
            android:fontFamily="casual"
            android:text="@string/volume_state"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42sp"
            android:fontFamily="casual"
            android:text="Current Color:               "
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:background="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintVertical_bias="0.865"
        android:outlineSpotShadowColor="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>